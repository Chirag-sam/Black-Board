<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.chirag.srm.MainActivity"
        >
        <AutoCompleteTextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="63dp"
            android:layout_marginStart="63dp"
            android:layout_marginTop="60dp"
            android:id="@+id/at1"
            android:hint="Department"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/down1"
            android:padding="5dp"
            android:layout_alignTop="@+id/at1"
            android:layout_alignBottom="@+id/at1"
            android:layout_alignRight="@+id/at1"
            android:src="@mipmap/ic_arrow_drop_down_black_24dp"/>

        <AutoCompleteTextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/at1"
            android:layout_alignLeft="@+id/at1"
            android:layout_alignStart="@+id/at1"
            android:layout_marginTop="60dp"
            android:id="@+id/at2"
            android:hint="Year" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/down2"
            android:padding="5dp"
            android:layout_alignTop="@+id/at2"
            android:layout_alignBottom="@+id/at2"
            android:layout_alignRight="@+id/at2"
            android:src="@mipmap/ic_arrow_drop_down_black_24dp"/>

        <AutoCompleteTextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/at2"
            android:layout_alignLeft="@+id/at2"
            android:layout_alignStart="@+id/at2"
            android:layout_marginTop="60dp"
            android:id="@+id/at3"
            android:hint="Section" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/down3"
            android:padding="5dp"
            android:layout_alignTop="@+id/at3"
            android:layout_alignBottom="@+id/at3"
            android:layout_alignRight="@+id/at3"
            android:src="@mipmap/ic_arrow_drop_down_black_24dp"/>

        <Button
            android:text="Search!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_below="@+id/at3"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:theme="@style/button" android:filterTouchesWhenObscured="true"/>



    </RelativeLayout>
</ScrollView>

